<header>
  <!-- Barra de navegação -->
  <div class="header">
    <div class="navbar">
      <div class="logo">
        <!--<img src="./Bookstore-logo.png" alt="logo" />-->
        <h1>Book Store</h1>
        <h3>Troca & Venda de Livros</h3>
      </div>

      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/categoria">Categoria</a></li>
        <li><a href="/sobre">Sobre</a></li>
        {{#if user}}
        <li><a href="/"></a></li>
        {{else}}
        <li><a href="/"></a></li>
        {{/if}}
      </ul>

      <div class="nav-busca">
        <input type="text" placeholder="Buscar..." />
      <i class="fa-solid fa-magnifying-glass"></i>

      </div>
    </div>

    <div class="nav-login">
      {{#if user}}
      <div class="nome-usuario">
        <p><strong>Bem-vindo,</strong><a href="/usuario">      {{user.nome}} {{user.sobrenome}}</a></p>

        {{#each user.books}}
        <!-- Renderizar os livros do usuário aqui -->
        {{/each}}
      </div>
      <form action="/logout" method="post">
        <button type="submit">Sair</button>
      </form>
      {{else}}
      <div class="nome-usuario">
        <p><strong>Bem-vindo,</strong> Usuário</p>
      </div>
      <form action="/login" method="get">
        <button type="submit">Login</button>
      </form>
      {{/if}}
    </div>
  </div>
</header>