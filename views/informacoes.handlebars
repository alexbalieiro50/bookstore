<main>
  <div class="container-infor">
    <div class="container-descricao">
      <div class="descricao">
        <div class="imagem-livro">
          <img src="{{livro.imagem}}" alt="Imagem do livro" />
        </div>
        <div class="informacoes">
          <h1>{{livro.titulo}}</h1>
          <h4>Autor: {{livro.autor}}</h4>
          <h3>R${{livro.preco}}</h3>
          <p>{{livro.resumo}}</p>
          <h3>Editora: {{livro.editora}}</h3>
          <h3>Ano: {{livro.ano}}</h3>
          <h3>Páginas: {{livro.paginas}}</h3>
          <h3>ISBN: {{livro.isbn}}</h3>
          <a class="button" href="https://wa.me/55{{livro.whatsapp}}">Negociar</a>

        </div>
      </div>

      <div class="descricao-livro">
        <h2>Descrição</h2>
        <p>{{livro.descricao}}</p>
      </div>
    </div>
  </div>
</main>